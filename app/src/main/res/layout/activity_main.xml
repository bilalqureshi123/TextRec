<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raheelayasmin.textrec.MainActivity">

    <SurfaceView
        android:id="@+id/surfaceView1"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_alignParentBottom="true"
        android:textColor ="@android:color/white"
        android:text="No text"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintBottom_toTopOf="@+id/surfaceView1"
        app:layout_constraintTop_toBottomOf="@+id/surfaceView1"
        app:layout_constraintVertical_bias="0.082" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="translatebut"
        android:text="Translate"
        app:layout_constraintRight_toLeftOf="@+id/surfaceView1"
        app:layout_constraintLeft_toRightOf="@+id/surfaceView1"
        app:layout_constraintBottom_toTopOf="@+id/surfaceView1"
        app:layout_constraintTop_toBottomOf="@+id/surfaceView1"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintVertical_bias="0.103" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.972"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEARCH"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

</android.support.constraint.ConstraintLayout>
